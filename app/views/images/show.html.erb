<%- model_class = Image -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %> <%= @showimage.id %></h1>
</div>

<%= retina_image_tag @showimage.data_url(:sixhundred).to_s, :alt => "#{strip_tags(@showimage.caption)}", :title => "#{strip_tags(@showimage.caption)}", :width => "300" %>

<dl class="dl-horizontal">
  <dt><%= model_class.human_attribute_name(:data) %>:</dt>
  <dd><%= @showimage.data %></dd>
  <dt><%= model_class.human_attribute_name(:article_id) %>:</dt>
  <dd><%= link_to @showimage.article_id, issue_article_path(@issue,@article) %></dd>
  <dt><%= model_class.human_attribute_name(:issue_id) %>:</dt>
  <dd><%= link_to @issue.id, issue_path(@issue) %></dd>
  <dt><%= model_class.human_attribute_name(:media_id) %>:</dt>
  <dd><%= @showimage.media_id ? @showimage.media_id : "none" %></dd>
  <dt><%= model_class.human_attribute_name(:height) %>:</dt>
  <dd><%= @showimage.height %></dd>
  <dt><%= model_class.human_attribute_name(:width) %>:</dt>
  <dd><%= @showimage.width %></dd>
  <dt><%= model_class.human_attribute_name(:caption) %>:</dt>
  <dd><%= @showimage.caption? ? @showimage.caption : '-' %></dd>
  <dt><%= model_class.human_attribute_name(:credit) %>:</dt>
  <dd><%= @showimage.credit? ? @showimage.credit : '-' %></dd>
  <dt><%= model_class.human_attribute_name(:hidden) %>:</dt>
  <dd><%= @showimage.hidden ? 'hidden' : 'no' %></dd>
  <dt><%= model_class.human_attribute_name(:position) %>:</dt>
  <dd><%= @showimage.position %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              issue_article_images_path(@issue,@article), :class => 'btn btn-outline-secondary'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_issue_article_image_path(@issue, @article, @showimage), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              issue_article_image_path(@issue,@article,@showimage),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<div class="page-header">
	<h2>Sign in for UK subscribers</h2>
</div>

<%= simple_form_for(resource_name, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal' }) do |f| %>
  <div class="inputs">
    <%= f.input :login, :required => false, :autofocus => true, :label => 'Your subscription number' %>
    <%= f.input :password, :required => false, :label => 'Your surname' %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Sign in", class: 'btn btn-secondary' %>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
      <!-- <% link_to "Forgot your password?", new_password_path(resource_name) %> -->
    <% end -%>
    <%= render :partial => "devise/shared/links" %>
  </div>
<% end %>
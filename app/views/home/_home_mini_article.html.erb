<div class="col-sm-4">
      <% if article.first_image %>
        <%= link_to retina_image_tag(article.first_image.data_url(:threehundred).to_s, alt: strip_tags((article.first_image.try('caption') ? article.first_image.caption : article.title) + ' ' + (article.first_image.try('credit') ? article.first_image.credit : '')), title: strip_tags((article.first_image.try('caption') ? article.first_image.caption : article.title) + ' ' + (article.first_image.try('credit') ? article.first_image.credit : '')), width: '100%'), article_link %>
      <% else %>
        <%= link_to retina_image_tag('fallback/threehundred_no_image.jpg', alt: strip_tags((article.first_image.try('caption') ? article.first_image.caption : article.title) + ' ' + (article.first_image.try('credit') ? article.first_image.credit : '')), title: strip_tags((article.first_image.try('caption') ? article.first_image.caption : article.title) + ' ' + (article.first_image.try('credit') ? article.first_image.credit : '')), width: '100%'), article_link %>
      <% end %>
        <h6><%= link_to article.title, article_link %></h6>
      </div>